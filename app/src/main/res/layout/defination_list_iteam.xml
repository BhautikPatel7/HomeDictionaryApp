<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
   android:layout_marginTop="10dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#AC7E92"
    android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defination"
        android:id="@+id/textview_defination"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example"
        android:id="@+id/textview_defination_example"
        android:textSize="18dp"

        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="synonyms"
        android:id="@+id/textview_synnonms"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textStyle="italic"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/textview_synnonms_example"
        android:textSize="18dp"

        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="antonyms"
        android:id="@+id/textview_antononyms"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textStyle="italic"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/textview_antonyms_example"
        android:textSize="18dp"
        android:textColor="#1E1413"
        android:textAlignment="center"
        android:padding="10dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>